#!/usr/bin/env bash
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
if [[ -z $RADIO_STREAM_CONTAINER ]]; then $DIR/../util/container_run.sh $(basename "$0") $*; exit 0; fi

function blsf() {
    (
        echo "-----|-----|-----|-----|-----|-----";
        echo "Artist|Title|Last played|Count|Rating|Date added";
        echo "-----|-----|-----|-----|-----|-----";
        beet ls -f '%left{$artist,20}|%left{$title,20}|$playcount|$rating|$added' "$@"
    ) | column -s \| -t -c 60
}

echo -e "\e[33mRunning: beet ls $*\e[39m"

blsf $*
