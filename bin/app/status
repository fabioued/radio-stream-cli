#!/usr/bin/env bash
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
if [[ -z $NGINX_PASSWORD ]]; then $DIR/../util/container_run.sh $(basename "$0"); exit 0; fi

echo "*******************"
echo "    RadioStream    "
echo "*******************"
echo "User: radio"
echo "Password: $NGINX_PASSWORD"
echo ""
echo "Available scripts: "
echo ""
find /radio-stream/scripts/ -type f -exec basename {} \; | grep -v readme | grep -v status | sort
echo ""
